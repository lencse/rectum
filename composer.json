{
    "name": "lencse/rectum",
    "description": "RectumPHP framework",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Levente LÃ¶ki",
            "email": "leventeloki@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Lencse\\Rectum\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "test/",
            "TestApp\\": "test/test-app/src/"
        }
    },
    "require": {
        "php": ">=7.2.0",
        "rdlowrey/auryn": "^1.4",
        "guzzlehttp/psr7": "^1.4",
        "nikic/fast-route": "^1.3",
        "psr/container": "^1.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.2",
        "lencse/ci-tools": "^3.1",
        "phpmd/phpmd": "^2.6",
        "squizlabs/php_codesniffer": "^3.3",
        "phpstan/phpstan": "^0.10.1",
        "phploc/phploc": "^4.0"
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html logs/coverage-report --coverage-clover logs/clover.xml --log-junit logs/test-report.xml",
        "min-coverage": "ci-test-coverage --min-coverage 99 --clover-file logs/clover.xml",
        "md": "phpmd src/ text phpmd.xml && phpmd test/ text phpmd.xml",
        "cs": "phpcs --standard=PSR2 src test",
        "loc": "phploc -vvv src",
        "phpstan": "phpstan analyse -c phpstan.neon --level 7 src test",
        "test-all": "composer test-coverage && composer min-coverage && composer md && composer cs && composer phpstan && composer loc",
        "benchmark": "phpbench run  --revs=100 --iterations=5 --report=default",
        "benchmark-trace": "phpbench xdebug:trace --extension=\"PhpBench\\Extensions\\XDebug\\XDebugExtension\""
    }
}
